{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/minhaAPI/types"
    ],
    "types": [
      "node",
      "express",
      "jsonwebtoken",
      "bcrypt"
    ]
  },
  "include": [
    "server.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}